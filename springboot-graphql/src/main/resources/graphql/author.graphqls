schema {
    query: Query
}

type Query {
    getAuthorById(id: Int!) : Author
    getAuthorByEmail(email: AuthorEmail!) : Author
    getBook: Book
    allBooks: [Book]
}

type Author {
    id: Int!
    name: String!
    email: Email
}

type Book {
    id: Int!
    name: String!
    author: Author!
}


input AuthorEmail {
    email: String
}

scalar Email
